<!--Comments Modal-->

<div class="modal fade modalComment" id="commentModal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="modalComment">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-title">Leave a Comment</h5>
      </div>
      <div class="modal-body">
        {{!-- {{#if this.comments}} {{#each this.comments}}
        <div class="panel panel-default">
          <div class="panel-body">
            <p class="previousNotes"> {{this.body}}</p>
            <button type="button" class="btn btn-danger deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
          </div>
        </div>
        {{/each}} {{else}}
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>No notes for this article yet.</h4>
          </div>
        </div>
        {{/if}} --}}
          <textarea id="commentText-{{this._id}}" class="form-control" rows="4" placeholder="New Comment"></textarea>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary saveComment" id="submit-comment" data-id={{this._id}}>Submit</button>
      </div>
    </div>
  </div>
</div>